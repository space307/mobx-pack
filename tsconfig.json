{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "module": "ES6",
    "newLine": "lf",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2020"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/__test__/*.ts", "src/__test__/*.tsx"]
}
